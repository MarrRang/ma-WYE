<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/imageView2"
        android:layout_marginTop="10dp"
        android:text="사진 변경" />

    <EditText
        android:id="@+id/editid"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo"
        android:hint="아이디"
        android:inputType="text"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/checkid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editid"
        android:layout_toRightOf="@id/editid"
        android:layout_alignRight="@id/editpw"
        android:text="중복 확인" />

    <EditText
        android:id="@+id/editpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/editid"
        android:layout_below="@id/editid"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/checkpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/editpw"
        android:layout_below="@id/editpw"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="이메일"
        android:layout_below="@id/checkpw"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="핸드폰 번호"
        android:layout_below="@id/email"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/checkphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/phone"
        android:layout_toRightOf="@id/phone"
        android:layout_alignRight="@id/editpw"
        android:text="휴대폰 인증" />

    <EditText
        android:id="@+id/editnickname"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:hint="닉네임"
        android:inputType="text"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/checknickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editnickname"
        android:layout_toRightOf="@id/editnickname"
        android:layout_alignRight="@id/editpw"
        android:text="중복 확인" />

    <Button
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="완료" />


</RelativeLayout>