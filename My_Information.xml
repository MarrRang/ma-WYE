<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <GridLayout
        android:id="@+id/user_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="3">

        <ImageView
            android:layout_column="0"
            android:layout_gravity="fill_vertical"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:contentDescription="@string/profile"
            android:gravity="center"
            android:src="@drawable/dora" />

        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/posts_number"
            android:textColor="#000000"
            android:textSize="7pt" />

        <TextView
            android:layout_column="3"
            android:layout_row="0"
            android:text="@string/abos_number"
            android:textColor="#000000"
            android:textSize="7pt" />

        <TextView
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/posts"
            android:textColor="#000000"
            android:textSize="7pt" />

        <TextView
            android:layout_column="2"
            android:layout_row="1"
            android:text="@string/followers"
            android:textColor="#000000"
            android:textSize="7pt" />

        <TextView
            android:layout_column="3"
            android:layout_row="1"
            android:text="@string/abos"
            android:textColor="#000000"
            android:textSize="7pt" />

        <Button
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_vertical"
            android:textColor="#000000"
            android:layout_row="2"
            android:text="@string/follow"
            android:textSize="7pt"/>

    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/nickname"
        android:textColor="#000000"
        android:textSize="7pt"
         />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/introduce"
        android:textColor="#000000"
        android:textSize="6pt"
        />


    <TableLayout
        android:id="@+id/TableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TableRow>

            <ImageView
                android:id="@+id/ImageView1"
                android:contentDescription="@string/food1"
                android:src="@drawable/austin" />

            <ImageView
                android:id="@+id/ImageView2"
                android:contentDescription="@string/food2"
                android:src="@drawable/cheeserice" />

            <ImageView
                android:id="@+id/ImageView3"
                android:contentDescription="@string/food3"
                android:src="@drawable/ddeokbbokki" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/ImageView4"
                android:contentDescription="@string/food4"
                android:src="@drawable/frenchfries" />

            <ImageView
                android:id="@+id/ImageView5"
                android:contentDescription="@string/food5"
                android:src="@drawable/pizza" />

            <ImageView
                android:id="@+id/ImageView6"
                android:contentDescription="@string/food6"
                android:src="@drawable/pork" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/ImageView7"
                android:contentDescription="@string/food7"
                android:src="@drawable/pork2" />

            <ImageView
                android:id="@+id/ImageView8"
                android:contentDescription="@string/food8"
                android:src="@drawable/soondae" />

            <ImageView
                android:id="@+id/ImageView9"
                android:contentDescription="@string/food9"
                android:src="@drawable/taco" />
        </TableRow>
    </TableLayout>


</android.support.constraint.ConstraintLayout>